        if (featuresGrid && featureFiltersContainer) {
            // Create filter buttons dynamically
            const categories = ['all', ...new Set(featuresData.map(f => f.category))];
            const categoryTranslations = {
                'all': '×”×›×œ',
                'Visual-Effects': '××¤×§×˜×™× ×—×–×•×ª×™×™×',
                'Dialog-System': '××¢×¨×›×•×ª ×“×™××œ×•×’',
                'Automation': '××•×˜×•××¦×™×”',
                'Audio-Processing': '×¢×™×‘×•×“ ××•×“×™×•',
                'UI-Component': '×¨×›×™×‘×™ UI'
            };
            
            categories.forEach(cat => {
                const btn = document.createElement('button');
                btn.className = 'filter-btn';
                if (cat === 'all') btn.classList.add('active');
                btn.dataset.filter = cat;
                btn.textContent = categoryTranslations[cat] || cat;
                featureFiltersContainer.appendChild(btn);
            });

            // Render feature cards
            featuresData.forEach(feature => {
                const card = document.createElement('div');
                card.className = 'card feature-card';
                card.dataset.category = feature.category;
                card.innerHTML = `<div><p style="font-size: 0.875rem; font-weight: 600; color: var(--accent-blue);">${feature.professional}</p><h4 style="font-weight: 700; font-size: 1.125rem; margin-top: 0.25rem;">${feature.index}. ${feature.original}</h4></div><div class="details" style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--border-color);"><p>${feature.simple}</p></div>`;
                card.addEventListener('click', () => card.querySelector('.details').classList.toggle('open'));
                featuresGrid.appendChild(card);
            });

            // Add filter functionality
            const filterButtons = featureFiltersContainer.querySelectorAll('.filter-btn');
            const featureCards = featuresGrid.querySelectorAll('.feature-card');
            filterButtons.forEach(button => {
                button.addEventListener('click', () => {
                    filterButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    const filter = button.dataset.filter;
                    featureCards.forEach(card => {
                        card.style.display = (filter === 'all' || card.dataset.category === filter) ? 'block' : 'none';
                    });
                });
            });
        }


