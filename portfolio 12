    document.addEventListener('DOMContentLoaded', () => {
        // --- Slideshow Logic ---
        const slideshowProjects = [
            { "imageUrl": "https://i.postimg.cc/J0DB6SQH/039-7-ft-MP4.png" }, { "imageUrl": "https://i.postimg.cc/gjX6S1K6/0-4-fmm-ary.png" }, { "imageUrl": "https://i.postimg.cc/TYbDrM1h/3.png" }, { "imageUrl": "https://i.postimg.cc/XY0yLHBD/4-039-039.png" }, { "imageUrl": "https://i.postimg.cc/DwKb6j4x/4.png" }, { "imageUrl": "https://i.postimg.cc/fRjSrcYv/9-nam-MP3-Dy.png" }, { "imageUrl": "https://i.postimg.cc/brD2C4Rn/47.png" }, { "imageUrl": "https://i.postimg.cc/9Qtwndyb/A-3.png" },
        ];
        const slideshowContainer = document.getElementById('h-slideshow');
        if (slideshowContainer && slideshowProjects.length > 0) {
            let slideIndex = 0, slideshowInterval, isPlaying = true;
            slideshowProjects.forEach((p) => {
                slideshowContainer.innerHTML += `<div class="h-slide"><img src="${p.imageUrl}" loading="lazy"></div>`;
            });
            const slides = slideshowContainer.getElementsByClassName('h-slide');
            const show = (n) => {
                if (n >= slides.length) slideIndex = 0;
                if (n < 0) slideIndex = slides.length - 1;
                for (let i = 0; i < slides.length; i++) {
                    slides[i].style.display = "none";
                    slides[i].className = 'h-slide';
                }
                if (slides[slideIndex]) {
                    slides[slideIndex].style.display = "block";
                    slides[slideIndex].classList.add('h-cube-3d');
                }
            };
            const play = () => { isPlaying = true; clearInterval(slideshowInterval); slideshowInterval = setInterval(() => show(++slideIndex), 7400); document.getElementById('h-play-pause').innerHTML = '<i class="fas fa-pause"></i>'; };
            const pause = () => { isPlaying = false; clearInterval(slideshowInterval); document.getElementById('h-play-pause').innerHTML = '<i class="fas fa-play"></i>'; };
            document.getElementById('h-prev').addEventListener('click', () => { show(--slideIndex); if (isPlaying) { pause(); play(); } });
            document.getElementById('h-next').addEventListener('click', () => { show(++slideIndex); if (isPlaying) { pause(); play(); } });
            document.getElementById('h-play-pause').addEventListener('click', () => isPlaying ? pause() : play());
            show(slideIndex); play();
        }

